@model IEnumerable<Data.Models.MapMarkers>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MarkerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Longitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Latitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MainLangauge)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dialect)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AudioFile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdminId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Longitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Latitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MainLangauge)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dialect)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AudioFile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Admin.AdminId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MarkerId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MarkerId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MarkerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
