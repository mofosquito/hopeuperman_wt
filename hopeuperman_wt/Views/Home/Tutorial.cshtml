<!--This page is a guide for users to use the map without sending data to the admin panel-->
@{
    ViewData["Title"] = "Tutorial";
}

<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="/leaflet.css" />
    <script src="/leaflet.js"></script>

    <style>
        #map {
            margin-left: auto;
            margin-right: auto;
            height: 800px;
            width: 800px;
        }
    </style>
</head>

<body>
    <div id="map"></div>
    <script>
        var map = L.map('map').setView([2.3412195, 111.8418392], 18);

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(map);
    </script>
</body>
</html>